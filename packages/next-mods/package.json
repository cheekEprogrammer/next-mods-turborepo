{
  "name": "next-mods",
  "description": "Add useful features to your next.js application.",
  "version": "0.1.0",
  "type": "module",
  "bin": "./dist/index.js",
  "author": {
    "name": "cheekyprogrammer",
    "url": "https://twitter.com/cheekyprogram"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --no-watch",
    "release": "changeset version",
    "pub:next": "npm run build && npm publish --no-git-checks --access public --tag next",
    "pub:release": "npm run build && npm publish --access public",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "components",
    "next.js",
    "library"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "commander": "^13.0.0",
    "fs-extra": "^11.3.0",
    "kleur": "^4.1.5",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.7",
    "tsup": "^8.3.5",
    "typescript": "^5.6.2"
  }
}
