{
  "name": "next-mods-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "lint": "turbo lint",
    "release": "npx @changesets/cli version",
    "pub:beta": "cd packages/next-mods && npm run pub:beta",
    "pub:release": "cd packages/next-mods && npm run pub:release",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@changesets/changelog-github": "^0.5.0"
  }
}
